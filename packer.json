{
  "variables": {
    "vagrant_cloud_token": "{{env `VAGRANT_CLOUD_TOKEN`}}",
    "version": "{{env `VERSION`}}",
    "boot_wait": "10s",
    "disk_size": "150000",
    "http_directory": "scripts",
    "iso_checksum_type": "sha256",
    "iso_urls": "http://cdimage.ubuntu.com/releases/18.04/release/ubuntu-18.04.1-server-amd64.iso",
    "iso_checksum": "a5b0ea5918f850124f3d72ef4b85bda82f0fcd02ec721be19c1a6952791c8ee8",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": "22",
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "headless": "true",
    "vm_name": "carverlinux"
  },
  "builders": [
    {
      "type": "vmware-iso",
      "guest_os_type": "ubuntu",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "vhv.enable": "true"
      },
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "disk_size": "{{ user `disk_size` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_urls":  "{{ user `iso_urls` }}",
      "headless": "{{ user `headless` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password":"{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "shutdown_command": "{{ user `shutdown_command` }}"
    },
    {
      "type": "parallels-iso",
      "parallels_tools_flavor": "lin",
      "guest_os_type": "ubuntu",
      "disk_size": "{{ user `disk_size` }}",
      "prlctl": [
        [ "set", "{{.Name}}", "--nested-virt", "on" ],
        [ "set", "{{.Name}}", "--device-set", "cdrom0", "--iface", "sata" ],
        [ "set", "{{.Name}}", "--device-del", "sound0" ],
        [ "set", "{{.Name}}", "--device-del", "usb" ]
      ],
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_urls":  "{{ user `iso_urls` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password":"{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "shutdown_command": "{{ user `shutdown_command` }}"
    },
    {
      "type": "qemu",
      "format": "qcow2",
      "accelerator": "kvm",
      "disk_interface": "ide",
      "disk_size": "{{ user `disk_size` }}",
      "net_device": "e1000",
      "boot_command": [
        "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " -- <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_urls":  "{{ user `iso_urls` }}",
      "headless": "{{ user `headless` }}",
      "iso_checksum_type": "{{ user `iso_checksum_type` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password":"{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "shutdown_command": "{{ user `shutdown_command` }}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "-vvvv",
      "staging_directory": "/tmp/staging",
      "galaxy_file": "ansible/requirements.yml"
    },
    {
      "type": "file",
      "source": "specs",
      "destination": "$HOME/specs"
    },
    {
      "type": "shell",
      "inline": [
        "curl https://omnitruck.chef.io/install.sh | sudo -E bash -s -- -P inspec",
        "sudo inspec exec $HOME/specs",
        "sudo yum remove -y inspec"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "packer_{{.BuildName}}_{{.Provider}}.box",
        "vagrantfile_template": "Vagrantfile",
        "compression_level": "9"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "jamesla/carverlinux",
        "access_token": "{{ user `vagrant_cloud_token` }}",
        "version": "{{ user `version` }}"
      }
    ]
  ]
}
