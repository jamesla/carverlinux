{
  "variables": {
    "vagrant_cloud_token": "{{env `VAGRANT_CLOUD_TOKEN`}}",
    "version": "{{env `VERSION`}}",
    "headless": "true",
    "vm_name": "carverlinux",
    "provider": "{{env `PROVIDER`}}"
  },
  "builders": [
    {
      "type": "vagrant",
      "communicator": "ssh",
      "source_path": "jamesla/debian-basebox",
      "provider": "{{user `PROVIDER`}}",
      "add_force": true
    }
  ],
  "provisioners": [
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook.yml",
      "playbook_dir": "ansible",
      "extra_arguments": "-v",
      "staging_directory": "/tmp/staging",
      "galaxy_file": "ansible/requirements.yml"
    },
    {
      "type": "file",
      "source": "specs",
      "destination": "/tmp/specs"
    },
    {
      "type": "shell",
      "inline": [
        "sudo -u vagrant inspec --chef-license=accept",
        "sudo -u vagrant inspec exec /tmp/specs",
        "sudo -u vagrant rm -rf ~/snap",
        "sudo chown root:root /usr",
        "sudo rm -rf /tmp/*"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant-cloud",
        "box_tag": "jamesla/carverlinux",
        "access_token": "{{ user `vagrant_cloud_token` }}",
        "version": "{{ user `version` }}"
      }
    ]
  ]
}
